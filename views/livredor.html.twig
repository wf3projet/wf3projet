	{% extends "layout.html.twig" %}
{% block content %}
   <!-- Contact -->
    <section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Veuillez Laisser votre Message</h2>
              <h3 class="section-subheading text-muted">nous vous remercions !</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            {{ form_start(livredorForm)}}
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">

                    {{ form_widget(livredorForm.author)}}
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
                    {{ form_widget(livredorForm.email)}}
                    <p class="help-block text-danger"></p>
                  </div>
                  
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    {{ form_widget(livredorForm.content)}}
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  {{ form_widget(livredorForm.Enregistrer)}}
                </div>
              </div>
            {{ form_end(livredorForm)}}
          </div>
        </div>
      </div>
    </section>
    {% endblock %}