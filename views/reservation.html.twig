{% extends "layout.html.twig" %}

{% block title %} Reservation {% endblock %}

{% block content %}
    
        <!-- Contact -->
    <section id="contact">
        
      <div class="container">
          
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">Reservation</h2>
              <h3 class="section-subheading text-muted">Votre réservation ce passe ici!</h3>
          </div>
        </div>
          
        <div class="row">
            
          <div class="col-lg-12">
              
            <form method="POST">
                
              <div class="row">
                 <span style="color: white">{{ dump(test)}}</span> 
                <div class="col-md-6">
                    
                  <div class="form-group">
                    <input class="form-control" name="name" type="text" placeholder="Nom *" required data-validation-required-message="Merci de préciser votre nom svp.">
                    <p class="help-block text-danger"></p>
                  </div>
                    
                  <div class="form-group">
                    <input class="form-control" name="email" type="email" placeholder="Adresse e-mail *" required data-validation-required-message="Merci de préciser votre adresse e-mail svp.">
                    <p class="help-block text-danger"></p>
                  </div>
                    
                  <div class="form-group">
                    <input class="form-control" name="date" type="date" placeholder="Choisir une date" required data-validation-required-message="Merci de choisir une date svp.">
                    <p class="help-block text-danger"></p>
                  </div>
                    
                 <div class="form-group">
                    <input class="form-control" name="ticket" type="number" placeholder="Choisir le nombre de ticket" required data-validation-required-message="Merci de préciser votre adresse e-mail svp.">
                    <p class="help-block text-danger"></p>
                  </div>
                    
                </div>
                
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button class="btn btn-primary btn-xl text-uppercase" type="submit">Valider la reservation</button>
                </div>
                  
              </div>
                
            </form>
              
          </div>
            
        </div>
          
      </div>
        
    </section>
                                
{% endblock %}